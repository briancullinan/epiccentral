@using ViewRes
@model dynamic

@{
    ViewBag.Title = Operation.Operations_Title;
}
@Html.Attach("Change", "Operation", "RefreshOperations()")
@Html.Attach("Add", "User", "RefreshOperations()")
@Html.Attach("Edit", "Organization", "RefreshOperations()")
@Html.Attach("Edit", "Device", "RefreshOperations()")
@Html.Attach("Account", "LogOn", "RefreshOperations()")
