@using ViewRes
@model EPICCentral.Models.EditSetting

@{
    ViewBag.Title = Configuration.EditSetting_Title;
}

@if (!Request.IsAjaxRequest() && !ViewContext.Controller.ControllerContext.IsChildAction)
{
    <h2>@Configuration.EditSetting_Title</h2>
}


@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, Configuration.EditSetting_Errors)

    <fieldset>
        <legend>@Configuration.EditSetting_Administration</legend>
           
        <div class="editor-label">
            @Html.LabelFor(m => m.Name)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Name)
        </div>
           
        <div class="editor-label">
            @Html.LabelFor(m => m.Value)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Value)
        </div>
    </fieldset>
}